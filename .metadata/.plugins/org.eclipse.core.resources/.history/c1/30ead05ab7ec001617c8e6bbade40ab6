package bankingsystem;
public class BankAccount {
	//start fields
	private Customer customer;
    private int acctNum;
    private double amount;
    private Bank bank;
    //end fields
    //start getters and setters
	public Customer getCustomer() {
		return customer;
	}
	public void setCustomer(Customer customer) {
		this.customer = customer;
	}
	public int getAcctNum() {
		return acctNum;
	}
	public void setAcctNum(int acctNum) {
		this.acctNum = acctNum;
	}
	public double getAmount() {
		return amount;
	}
	public void setAmount(double amount) {
		this.amount = amount;
	}
	public Bank getBank() {
		return bank;
	}
	public void setBank(Bank bank) {
		this.bank = bank;
	}
    //end getters and setters
	
	//constructor setting the values to object
	public BankAccount(Bank bank, int acctNum, double amount){
		this.bank = bank;
		this.acctNum = acctNum;
		this.amount = amount;
	}//end constructor
	
	public String getBankName(){
		//would you set a bank name here? with a setter method?
	}
	
	public String getBankNumber(){
		//same set bank number ? 
	}
	
	public static void main(String[]args){
		BankAccount account = new BankAccount(bank, acctNum, amount);
	}//end main
	
	
}//end class
